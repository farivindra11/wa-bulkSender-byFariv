<!-- views/qrCodePage.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>QR Code Page</title>
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .card {
      width: 300px;
      padding: 20px;
      border: 1px solid #ccc;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    #qr-code {
      width: 200px; /* Adjust the size of the QR code as needed */
      height: 200px;
    }

    /* Apply styles similar to Bootstrap button */
    .btn {
      display: inline-block;
      font-weight: 400;
      color: #212529;
      text-align: center;
      vertical-align: middle;
      user-select: none;
      background-color: #007bff;
      border: 1px solid #007bff;
      padding: 0.375rem 0.75rem;
      font-size: 1rem;
      line-height: 1.5;
      border-radius: 0.25rem;
      transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
      cursor: pointer; /* Add cursor pointer on hover */
    }

    .btn:hover {
      color: #fff;
      background-color: #0056b3;
      border-color: #0056b3;
    }

    /* Style for the "Cek Status" button */
    .status-btn {
      display: inline-block;
      font-weight: 400;
      color: #212529;
      text-align: center;
      vertical-align: middle;
      user-select: none;
      background-color: #28a745; /* Green color for enabled state */
      border: 1px solid #28a745;
      padding: 0.375rem 0.75rem;
      font-size: 1rem;
      line-height: 1.5;
      border-radius: 0.25rem;
      transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
      cursor: pointer; /* Add cursor pointer on hover */
    }

    .status-btn:disabled {
      background-color: #6c757d; /* Gray color for disabled state */
      border-color: #6c757d;
      cursor: not-allowed;
    }

    .status-btn:hover:disabled {
      color: #fff;
    }

    /* Add spacing between buttons */
    .button-container {
      display: flex;
      flex-direction: row; /* Arrange buttons in a row */
      justify-content: space-between; /* Add space between buttons */
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="card">
    <h2>Scan the QR Code</h2>
    <img id="qr-code" src="<%= qrCodeUrl %>" alt="QR Code">
    <div class="button-container">
      <!-- "Cek Status" button -->
      <button class="status-btn" id="statusBtn" onclick="cekStatus()" <%= isClientReady ? 'disabled' : '' %>>Cek Status</button>
      <% if (isClientReady) { %>
        <form action="/form" method="get">
          <button class="btn" type="submit">Masuk</button>
        </form>
      <% } %>
    </div>
  </div>

  <script>
    // Function to handle the "Cek Status" button click
    function cekStatus() {
      // Add your logic here to handle the "Cek Status" button click
      location.reload();
    }
  </script>
</body>
</html>
